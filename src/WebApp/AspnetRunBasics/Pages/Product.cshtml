@page
@model AspnetRunBasics.ProductModel
@{
    ViewData["Title"] = "Product";
}

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="Product">Category</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.SelectedCategory</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-3">
            <div class="card bg-light mb-3">
                <div class="card-header text-white text-uppercase" style="background-color:#0b6343"><i class="fa fa-list"></i> Categories</div>
                <ul class="list-group category_block">

                    @foreach (var category in Model.CategoryList)
                    {
                        <li class="list-group-item"><a asp-page="Product" asp-route-categoryName="@category">@category</a></li>
                    }

                </ul>
            </div>

            <div class="card bg-light mb-3">
                <div class="card-header text-white text-uppercase" style="background-color:#0b6343">Last product</div>
                <div class="card-body">
                    <img asp-append-version="true" class="img-fluid" src="~/images/product/@Model.ProductList.LastOrDefault().ImageFile" />
                    <h5 class="card-title">@Model.ProductList.LastOrDefault().Name</h5>
                    <p class="card-text">@Model.ProductList.LastOrDefault().Summary</p>
                    <p class="bloc_left_price">@Model.ProductList.LastOrDefault().Price TL</p>
                </div>
            </div>

        </div>

        <div class="col">
            <div class="row grid--view-items row nov-slick-carousel slick-initialized slick-slider">
                
                    @foreach (var product in Model.ProductList)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <partial name="_ProductItemPartial" model="@product" />
                        </div>
                    }
                </div>
            </div>
    </div>
</div>


